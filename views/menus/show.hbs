<div class="row">
    <div class="col s12 m8">
        <h3>{{menu.title}}
            {{!-- <small>{{{editIcon menu.user user menu._id false}}}</small> --}}
        </h3>
        <div class="card menu">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{menu.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{menu.user.displayName}}</span>
                <img src="{{menu.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/menus/user/{{menu.user._id}}">More From {{menu.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>